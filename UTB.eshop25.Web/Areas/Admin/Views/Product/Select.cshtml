@model IList<Product>
@{
    ViewData["Title"] = "Products";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Create</a>

@if (Model != null && Model.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image Source</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; ++i)
            {
                <tr>
                    <th scope="row">@Model[i].Id</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Price</td>
                    <td>@Model[i].ImageSrc</td>
                    <td><a asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return ConfirmDelete();" class="text-danger">X</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>Product table is empty!</p>
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}